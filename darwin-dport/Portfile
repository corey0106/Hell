# Stripped from the python group
set python.bin   python

use_configure    no

build.cmd        ${python.bin} setup.py
build.target     build

destroot.cmd     ${python.bin} setup.py
destroot.destdir --prefix=${destroot}${prefix}

post-activate {
        if { ![file exists ${prefix}/etc/${name}.conf] } {
                file copy ${prefix}/etc/${name}.conf.sample \
                        ${prefix}/etc/${name}.conf
        }
# FIXME: symlink /Systtem/Library/Frameworks/Python.framework/Version/Current/lib/site-packages/Hellanzb
